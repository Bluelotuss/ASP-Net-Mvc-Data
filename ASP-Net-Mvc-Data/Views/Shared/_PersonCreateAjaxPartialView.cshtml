@model ASP_Net_Mvc_Data.Models.ViewModels.CreatePersonViewModel

<form onsubmit="PostCreatePersonForm(event, this)" asp-controller="AjaxPersons" asp-action="AjaxCreateForm">
    <h3>Create</h3>
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" />
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    <br />
    <label asp-for="City"></label>
    <select asp-for="City.Id">
        @foreach (var item in Model.CityList)
        {
            <option value="@item.Id">@item.CityName</option>
        }
    </select>
    <span class="text-danger" asp-validation-for="City"></span>
    <br />
    <input class="btn btn-success" type="submit" value="Create" />
</form>