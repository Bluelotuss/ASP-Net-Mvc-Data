@model Person

<form onsubmit="PostEditPersonForm(event, this)" asp-controller="AjaxPersons" asp-action="AjaxEditForm" asp-route-id="@Model.Id">
    <h3>Update Person information</h3>
    <label asp-for="Name"></label>
    <input asp-for="Name" value="@Model.Name"/>
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" value="@Model.PhoneNumber"/>
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    <br />
    <label asp-for="City"></label>
    <input asp-for="City" value="@Model.City"/>
    <span class="text-danger" asp-validation-for="City"></span>
    <br />
    <input class="btn btn-success" type="submit" value="Update" />
</form>