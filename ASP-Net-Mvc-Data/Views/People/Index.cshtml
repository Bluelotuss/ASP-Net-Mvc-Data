@model ASP_Net_Mvc_Data.Models.ViewModels.PeopleViewModel
@{
    ViewData["Title"] = "PeopleIndex";
}

<h3>People Index</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Name</h3>
            </th>
            <th>
                <h3>PhoneNumber</h3>
            </th>
            <th>
                <h3>City</h3>
            </th>
            <th>
                <h3>Country</h3>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PersonList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Country.CountryName)
            </td>
            <td>
                @*@Html.ActionLink("EditToDo", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @*@Html.ActionLink("DeleteToDo", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
        }
    </tbody>
</table>